// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {},
		"ghcr.io/audacioustux/devcontainers/common-utils-extras:1": {},
		"ghcr.io/prulloac/devcontainer-features/latex:1": {},
		"ghcr.io/hspaans/devcontainer-features/pymarkdownlnt:1": {},
		"ghcr.io/devcontainers-extra/features/black:2": {},
		"ghcr.io/devcontainers-extra/features/flake8:2": {},
		"ghcr.io/devcontainers-extra/features/mkdocs:2": {},
		"ghcr.io/devcontainers-extra/features/mypy:2": {},
		"ghcr.io/devcontainers-extra/features/pandoc:1": {},
		"ghcr.io/devcontainers-extra/features/pre-commit:2": {},
		"ghcr.io/devcontainers-extra/features/pylint:2": {},
		"ghcr.io/devcontainers-extra/features/ruff:1": {},
		"ghcr.io/devcontainers-extra/features/yamllint:2": {}
	},

    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "./.devcontainer/postcreate.sh"

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
